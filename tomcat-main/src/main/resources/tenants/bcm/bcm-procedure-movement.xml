<record id="movement" is-extension="true" type="record,procedure">

    <services-record-path id="bcm">
        movements_bcm:http://collectionspace.org/services/movement/local/bcm,movements_bcm
    </services-record-path>

    <section id="locationMovementInformation">
        <field id="currentLocationFitness" autocomplete="vocab-currentlocationfitness" ui-type="enum">
        </field>
    </section>
    <section id="movementControlInformation">

        <field id="reasonForMove" ui-search="repeatable" autocomplete="vocab-reasonformove" ui-type="enum">
        </field>
        <repeat id="movementMethods">

            <field id="movementMethod" ui-search="repeatable" autocomplete="vocab-movementmethods" ui-type="enum">
                <selector>movement-movementMethods</selector>
            </field>

        </repeat>
    </section>
    <section id="inventory">

        <field id="inventoryActionRequired" ui-search="repeatable" autocomplete="vocab-inventoryactionrequired"
               ui-type="enum">
        </field>

        <field id="frequencyForInventory" ui-search="repeatable" autocomplete="vocab-frequencyforinventory"
               ui-type="enum">
        </field>
    </section>

</record>