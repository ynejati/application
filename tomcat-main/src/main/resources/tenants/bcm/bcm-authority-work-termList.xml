<record id="preferredWork" is-extension="true">
    <section id="termInformation">
        <repeat id="workTermGroupList/workTermGroup">
            <field id="termType" autocomplete="vocab-worktermtype" ui-type="enum">
                <selector>workAuthority-termType</selector>
            </field>
            <field id="termStatus" ui-search="repeatable" seperate_ui_container="true"
                   mini="search,list,relate" autocomplete="vocab-worktermstatus" ui-type="enum">
                <selector>workAuthority-termStatus</selector>
                <options>
                    <option id="" default="yes">Please select a value</option>
                </options>
            </field>
        </repeat>
    </section>
</record>
