<record id="objectexit" is-extension="true" type="record,procedure">
    <services-record-path id="bcm">
        objectexit_bcm:http://collectionspace.org/services/objectexit/local/bcm,objectexit_bcm
    </services-record-path>

    <!--  Object Exit Information Group -->
    <section id="objectexitInformation">

        <repeat id="exitMethods">
            <field id="exitMethod" ui-search="repeatable" autocomplete="vocab-exitmethods" ui-type="enum">
                <selector>objectexit-exitMethods</selector>
                <enum>
                    <blank-value>Please select a value</blank-value>
                </enum>
            </field>
        </repeat>

        <field id="exitReason" ui-search="repeatable" autocomplete="vocab-exitreason" ui-type="enum">
            <enum>
                <blank-value>Please select a value</blank-value>
            </enum>
        </field>
    </section>

</record>